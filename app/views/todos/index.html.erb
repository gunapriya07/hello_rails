
<h1 class="text-center text-primary my-4">Todo List</h1>

<table class="table table-bordered table-hover">
  <thead class="table-dark">
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Completed</th>
      <th colspan="3">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @todos.each do |todo| %>
      <tr>
        <td><%= todo.title %></td>
        <td><%= todo.description %></td>
        <td>
          <% if todo.completed %>
            <span class="badge bg-success">Done</span>
          <% else %>
            <span class="badge bg-secondary">Pending</span>
          <% end %>
        </td>
        <td><%= link_to "Show", todo, class: "btn btn-info btn-sm" %></td>
        <td><%= link_to "Edit", edit_todo_path(todo), class: "btn btn-warning btn-sm" %></td>
        <td><%= link_to "Delete", todo, method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-danger btn-sm" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to "New Todo", new_todo_path, class: "btn btn-primary mt-3" %>
