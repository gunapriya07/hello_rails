<%= form_with(model: todo, class: "mt-4") do |form| %>
  <% if todo.errors.any? %>
    <div class="alert alert-danger">
      <h4><%= pluralize(todo.errors.count, "error") %> prohibited this todo from being saved:</h4>
      <ul>
        <% todo.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-3">
    <%= form.label :title, class: "form-label" %>
    <%= form.text_field :title, class: "form-control", placeholder: "Enter title" %>
  </div>

  <div class="mb-3">
    <%= form.label :description, class: "form-label" %>
    <%= form.text_area :description, class: "form-control", placeholder: "Enter description", rows: 3 %>
  </div>

  <div class="form-check mb-3">
    <%= form.check_box :completed, class: "form-check-input", id: "todo_completed" %>
    <%= form.label :completed, class: "form-check-label", for: "todo_completed" %>
  </div>

  <div>
    <%= form.submit class: "btn btn-primary" %>
  </div>
<% end %>
