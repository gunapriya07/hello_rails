<div id="<%= dom_id todo %>" class="card mt-4 shadow-sm">
  <div class="card-body">
    <h5 class="card-title text-primary mb-3"><%= todo.title %></h5>

    <p class="card-text">
      <strong>Description:</strong><br>
      <%= todo.description.presence || "No description provided." %>
    </p>

    <p class="card-text">
      <strong>Status:</strong>
      <% if todo.completed %>
        <span class="badge bg-success">Completed</span>
      <% else %>
        <span class="badge bg-secondary">Pending</span>
      <% end %>
    </p>

    <div class="mt-3">
      <%= link_to "Edit", edit_todo_path(todo), class: "btn btn-warning btn-sm" %>
      <%= link_to "Back", todos_path, class: "btn btn-secondary btn-sm" %>
    </div>
  </div>
</div>
