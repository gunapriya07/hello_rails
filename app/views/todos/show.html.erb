<% if notice %>
  <div class="alert alert-success" role="alert">
    <%= notice %>
  </div>
<% end %>

<%= render @todo %>

<div class="mt-3 d-flex gap-2">
  <%= link_to "Edit this todo", edit_todo_path(@todo), class: "btn btn-warning" %>
  <%= link_to "Back to todos", todos_path, class: "btn btn-secondary" %>
  <%= button_to "Destroy this todo", @todo, method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-danger" %>
</div>
